<div class="container text-center mt-4">
  <section class="top-register-section py-4">
    <div class="container">
      <div class="card mx-auto shadow p-4 bg-secondary" style="max-width: 500px;" id="registerPromptCard">
        <h3 class="card-title">レビューを投稿してみませんか？</h3>
        <p class="card-text">あなたの投稿やコメントが、誰かのヒントになるかも。</p>
        <div class="button-box">
          <%= link_to "登録する", new_user_registration_path, class: "btn btn-primary", id: "registerBtn" %>
          <button class="btn btn-dark ms-2" id="declineBtn">拒否する</button>
        </div>
      </div>
    </div>

    <div id="dialogueContainer" class="dialogue-container mt-4" style="display: none;">
      <div class="dialogue-inner d-flex align-items-start">
        <div class="char-img">
          <%= image_tag("character.png", class: "img-fluid") %>
        </div>
        <div class="dialogue-box ms-3">
          <div id="typedText" class="dialogue-text"></div>
          <div id="dialogueChoices" class="mt-3" style="display: none;">
            <button class="btn btn-outline-light me-2" id="backBtn">▶前ノ画面ニモドル</button>
            <button class="btn btn-outline-light" id="retryBtn">▶マタ拒否スル</button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="top-material-section py-5">
    <div class="container">
      <h2 class="text-white mb-4">新着投稿</h2>
      <%= render 'public/materials/index', materials: @materials %>
    </div>
  </section>
</div>