<div class="container mt-4">
  <h1 class="mb-4 text-center">ジャンル登録・一覧</h1>

<%= render 'admin/genres/form', genre: @genre %>

  <table class="table table-striped table-light col-6">
    <thead class="thead-dark">
      <tr>
        <th>登録済みジャンル名</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>