<% if user_signed_in? %>
  <% if material.favorited_by?(current_user) %>
    <p>
      <%= link_to material_favorite_path(material), method: :delete, remote: true do %>
        <i class="fa-regular fa-circle-check"></i>
      <% end %>
    </p>
  <% else %>
    <p>
      <%= link_to material_favorite_path(material), method: :post, remote: true do %>
        <i class="fa-regular fa-circle-check"></i>
      <% end %>
    </p>
  <% end %>
<% end %>