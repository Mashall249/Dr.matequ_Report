<div class="container mt-4">
  <h1 class="mb-4 text-center">ログイン</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width:50%" %>
    </div>

    <div class="form-group">
      <%= f.label "パスワード" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style: "width:50%" %>
    </div>

    <div class="form-group">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>

    <div class="my-4">
      <%= render "public/shared/links" %>
    </div>
</div>