<div class="container mt-4">
  <h1 class="mb-4 text-center">ユーザー編集画面</h1>

  <%= form_with model: @user,url: users_information_path, local: true, method: :patch do |f| %>

    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= @user.errors.count %>件エラーが発生しました:</h4>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label "名前" %><br>
      <%= f.text_field :name, autofocus: true, class: "form-control", style: "width:50%" %>
    </div>

    <div class="form-group">
      <%= f.label "表示名" %><br>
      <%= f.text_field :nickname, autofocus: true, class: "form-control", style: "width:50%" %>
    </div>

    <div class="form-group">
      <%= f.label "診療科" %><br>
      <%= f.text_field :clinical_department, autofocus: true, class: "form-control", style: "width:50%" %>
    </div>

    <div class="form-group">
      <%= f.label "メールアドレス" %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width:50%" %>
    </div>

    <div class="form-group">
      <%= f.submit "更新", class: "btn btn-primary" %>
      <%= link_to "退会する", users_check_path, class: "btn btn-danger"%>
    </div>
  <% end %>
</div>