<%= form_with model: material, id: 'new_post', local: true do |f| %>

  <% if material.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= material.errors.count %>件エラーが発生しました:</h4>
      <ul>
        <% material.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "form-group">
    <%= f.label "画像" %><br>
    <%= f.file_field :image, accept: "image/*", id: "image_input" %>
  <br>
  <img id="image_preview" style="max-width: 300px; display: none; margin-top: 10px;" />
  </div>

  <div class = "form-group">
    <%= f.label "製品名" %><br>
    <%= f.text_field :name, placeholder: "製品名", class: "form-control", style: "width:50%" %>
  </div>

  <div class = "form-group">
    <%= f.label "特徴" %><br>
    <%= f.text_area :body, placeholder: "ここに特徴を記載してください", class: "form-control", style: "width:50%" %>
  </div>

  <div class = "form-group">
    <%= f.label "URL" %><br>
    <%= f.text_area :url, placeholder: "ここに製品のURLを記載してください", class: "form-control", style: "width:50%" %>
  </div>

  <div class="form-group">
    <%= f.label :genre_id, "ジャンル" %><br>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--" } %>
  </div>

  <div class="form-group">
    <%= f.submit "登録する", class:"btn btn-primary" %>
  </div>
<% end %>