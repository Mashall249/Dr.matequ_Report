<%= form_with model: material, id: 'new_post', local: true do |f| %>
  <div class = "form-group">
    <%= f.label  "画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class = "form-group">
    <%= f.label  "製品名" %>
    <%= f.text_field :name, placeholder: "製品名" %>
  </div>

  <div class = "form-group">
    <%= f.label  "特徴" %>
    <%= f.text_area :body, placeholder: "ここに特徴を記載してください" %>
  </div>

  <div class = "form-group">
    <%= f.label  "URL" %>
    <%= f.text_area :url, placeholder: "ここに製品のURLを記載してください" %>
  </div>

  <div class="form-group">
    <%= f.label :ジャンル %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %>
  </div>

  <%= f.submit "登録する", class:"btn btn-success" %>
<% end %>