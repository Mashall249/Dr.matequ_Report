<header>
  <nav class="navbar navbar-expand-lg" style="background-color: #2E2930;">
    <div class="container-fluid">

      <!-- ロゴ -->
      <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
        <%= image_tag "icon.png", size: '60x60' %>　
        <h1 class="text-light">Dr.Matequ Report</h1>
      <% end %>

      <!-- 右側の常時表示エリア -->
      <div class="d-flex align-items-center ms-auto gap-3">

        <!-- 検索・通知窓 -->
        <% if user_signed_in? %>
          <%= render 'layouts/search_notification' %>
        <% end %>

        <!-- Menuボタン -->
        <button class="btn btn-outline-light" id="menuToggle">Menu</button>
      </div>
    </div>
  </nav>

  <!-- 下段：検索フォームだけ別行として表示 -->
  <% if user_signed_in? %>
    <div class="search-bar-container py-2 px-3" style="background-color: #2E2930;">
      <div class="container-fluid d-flex justify-content-end">
        <%= render 'public/searches/form', q: @q %>
      </div>
    </div>
  <% end %>

  <!-- スライドメニュー本体 -->
  <%= render 'layouts/slide_menu' %>
</header>